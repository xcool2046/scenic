/* packages/ticket/pages/ticket/code/code.wxss */

.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ticket-card {
  background-color: #fff;
  border-radius: 16rpx;
  width: 100%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-bottom: 40rpx;
}

.header {
  background-color: #1AAD19;
  color: #fff;
  padding: 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.ticket-name {
  font-size: 28rpx;
}

.code-container {
  padding: 40rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.code-wrapper {
  background-color: #fff;
  padding: 20rpx;
  border: 2rpx solid #eee;
  margin-bottom: 20rpx;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
}

.code-text {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-top: 10rpx;
  font-family: monospace;
}

.loading {
  width: 400rpx;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.ticket-info {
  padding: 30rpx;
  border-top: 2rpx dashed #eee;
  border-bottom: 2rpx dashed #eee;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.expired {
  color: #e64340;
}

.status-valid {
  color: #1AAD19;
}

.status-used {
  color: #999;
}

.status-expired {
  color: #e64340;
}

.tips {
  padding: 30rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.tip-content {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.bottom-button {
  width: 80%;
  height: 88rpx;
  background-color: #1AAD19;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin-top: 30rpx;
} 