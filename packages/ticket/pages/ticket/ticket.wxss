/* packages/ticket/pages/ticket/ticket.wxss */
.container {
  padding-bottom: 50rpx;
}

/* 顶部横幅 */
.banner-section {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-text {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 30rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0));
  color: #fff;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.banner-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 通用部分标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 20rpx 0;
  padding: 0 30rpx;
}

/* 日期选择区 */
.date-section {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx 0;
}

.date-scroll {
  width: 100%;
  white-space: nowrap;
}

.date-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.date-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  background-color: #f8f8f8;
  position: relative;
  overflow: hidden;
}

.date-item.selected {
  background-color: #e8f5e9;
  border: 2rpx solid #1AAD19;
}

.date-item.weekend {
  background-color: #fff8e1;
}

.date-day {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.date-tag {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #1AAD19;
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 0 0 0 8rpx;
}

.weekend-tag {
  background-color: #FFA000;
}

/* 票种列表 */
.ticket-section {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx 0;
}

.ticket-list {
  padding: 0 30rpx;
}

.ticket-item {
  position: relative;
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  background-color: #fff;
  transition: all 0.3s;
  overflow: hidden;
  border: 2rpx solid transparent;
}

.ticket-item:active {
  transform: scale(0.98);
}

.ticket-item.selected {
  border-color: #1AAD19;
  background-color: #f0fff0;
}

.ticket-tag {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #1AAD19;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 0 0 0 16rpx;
}

.ticket-info {
  margin-right: 120rpx;
}

.ticket-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.ticket-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.ticket-notice {
  font-size: 24rpx;
  color: #999;
}

.ticket-price {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  text-align: right;
}

.price-current {
  font-size: 36rpx;
  font-weight: bold;
  color: #f5222d;
}

.price-original {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

/* 加载占位 */
.loading-placeholder {
  padding: 20rpx 0;
}

.loading-item {
  height: 120rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(90deg, #f2f2f2 25%, #e6e6e6 50%, #f2f2f2 75%);
  background-size: 400% 100%;
  animation: loading 1.5s ease-in-out infinite;
  border-radius: 12rpx;
}

@keyframes loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

.empty-tickets {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 数量选择 */
.quantity-section {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx 0;
}

.quantity-control {
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 2rpx solid #1AAD19;
  color: #1AAD19;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
}

.quantity-btn.disabled {
  border-color: #ccc;
  color: #ccc;
  opacity: 0.7;
}

.quantity-display {
  width: 80rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 0 20rpx;
}

.quantity-limit {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 购买按钮 */
.purchase-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 9;
}

.total-price {
  font-size: 28rpx;
  color: #333;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #f5222d;
}

.order-btns {
  display: flex;
}

.order-btn {
  padding: 16rpx 36rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  font-weight: bold;
}

.order-btn.primary {
  background-color: #1AAD19;
  color: #fff;
}

.order-btn.secondary {
  background-color: #f8f8f8;
  color: #666;
}

/* 图文详情 */
.detail-section {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx 0;
}

.detail-content {
  padding: 0 30rpx;
}

.detail-intro {
  margin-bottom: 20rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.intro-more {
  text-align: right;
  font-size: 26rpx;
  color: #1AAD19;
  margin-top: 10rpx;
}

.detail-images {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.detail-img {
  width: 220rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

/* 购票须知 */
.notice-section {
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx 0;
}

.notice-content {
  padding: 0 30rpx;
}

.notice-item {
  margin-bottom: 20rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 6rpx;
}

/* 底部间隔 */
.bottom-gap {
  height: 120rpx;
}
