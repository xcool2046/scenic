/* packages/realtime/pages/realtime-info/realtime-info.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.info-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 8rpx solid #1AAD19;
  padding-left: 16rpx;
}

/* 人流量样式 */
.crowd-info {
  padding: 20rpx 0;
}

.crowd-status {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  text-align: center;
}

.crowd-status.low {
  color: #1882DB;
}

.crowd-status.normal {
  color: #1AAD19;
}

.crowd-status.high {
  color: #E64340;
}

.crowd-tips {
  font-size: 26rpx;
  color: #666;
  margin-top: 16rpx;
  padding: 16rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  line-height: 1.5;
}

/* 景点等待时间样式 */
.spot-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.spot-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #eee;
}

.spot-item:last-child {
  border-bottom: none;
}

.spot-name {
  font-size: 28rpx;
  color: #333;
}

.spot-wait {
  font-size: 28rpx;
  font-weight: bold;
  color: #1AAD19;
}

.spot-wait.low {
  color: #1882DB;
}

.spot-wait.high {
  color: #E64340;
}

/* 天气信息样式 */
.weather-info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}

.weather-main {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.temperature {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.weather-desc {
  font-size: 30rpx;
  color: #666;
  margin-top: 8rpx;
}

.weather-detail {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.label {
  font-size: 26rpx;
  color: #999;
}

.value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}
