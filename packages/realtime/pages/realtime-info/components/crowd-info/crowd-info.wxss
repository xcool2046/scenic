/* components/crowd-info/crowd-info.wxss */
.crowd-info {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 20rpx;
}

.crowd-level {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

.level-text {
  color: white;
  font-size: 26rpx;
  font-weight: bold;
}

.crowd-details {
  margin-bottom: 20rpx;
}

.progress-container {
  margin-bottom: 20rpx;
}

.progress-label {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #333;
}

.progress-bar {
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  transition: width 0.5s ease;
}

.crowd-counts {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-top: 1rpx solid #f0f0f0;
}

.count-label {
  font-size: 26rpx;
  color: #666;
}

.count-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.crowd-warning {
  display: flex;
  align-items: center;
  background-color: #FFF9EC;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.warning-icon {
  margin-right: 10rpx;
  color: #E6A23C;
}

.warning-text {
  font-size: 24rpx;
  color: #E6A23C;
}

.update-time {
  text-align: right;
  font-size: 22rpx;
  color: #999;
} 