/* packages/guide/pages/guide/map/map.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  flex: 1;
  display: flex;
  flex-direction: column;
}

.map-container {
  flex: 1;
  width: 100%;
  height: calc(100vh - 280rpx);
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.scenic-map {
  width: 100%;
  height: 100%;
}

.map-controls {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.control-item {
  background-color: #1AAD19;
  color: #fff;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  text-align: center;
}

.placeholder {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 100rpx 0;
}
