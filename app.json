{
  "pages": [
    "pages/index/index",
    "pages/guide/guide",
    "pages/user/user",
    "pages/ticket/ticket",
    "pages/map/map"
  ],
  "subpackages": [
    {
      "root": "packages/ticket",
      "name": "ticket",
      "pages": [
        "pages/ticket/code/code",
        "pages/ticket/detail/detail",
        "pages/ticket/success/success"
      ],
      "independent": false
    },
    {
      "root": "packages/guide",
      "name": "guide",
      "pages": [
        "pages/guide/map/map",
        "pages/guide/spot/spot",
        "pages/guide/parking/parking",
        "pages/guide/nearby/nearby",
        "pages/guide/transport/transport",
        "pages/guide/services/services"
      ],
      "independent": false
    },
    {
      "root": "packages/realtime",
      "name": "realtime",
      "pages": [
        "pages/realtime-info/realtime-info"
      ],
      "independent": false
    }
  ],
  "preloadRule": {
    "pages/index/index": {
      "network": "all",
      "packages": ["ticket"]
    },
    "pages/guide/guide": {
      "network": "all",
      "packages": ["guide"]
    }
  },
  "window": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "景区导览",
    "navigationBarBackgroundColor": "#1AAD19",
    "backgroundTextStyle": "light",
    "enablePullDownRefresh": true,
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#1AAD19",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "assets/icons/home.png",
        "selectedIconPath": "assets/icons/home_selected.png"
      },
      {
        "pagePath": "pages/guide/guide",
        "text": "导览",
        "iconPath": "assets/icons/guide.png",
        "selectedIconPath": "assets/icons/guide_selected.png"
      },
      {
        "pagePath": "pages/ticket/ticket",
        "text": "票务",
        "iconPath": "assets/icons/ticket.png",
        "selectedIconPath": "assets/icons/ticket_selected.png"
      },
      {
        "pagePath": "pages/user/user",
        "text": "我的",
        "iconPath": "assets/icons/user.png",
        "selectedIconPath": "assets/icons/user_selected.png"
      }
    ]
  },
  "style": "v2",
  "componentFramework": "glass-easel",
  "sitemapLocation": "sitemap.json",
  "lazyCodeLoading": "requiredComponents",
  "permission": {
    "scope.userLocation": {
      "desc": "您的位置信息将用于景区导览与导航功能"
    }
  },
  "requiredPrivateInfos": [
    "getLocation",
    "chooseLocation"
  ],
  "pageTransition": {
    "type": "slide",
    "duration": 300
  },
  "resouceProviders": {
    "icons": "Icons by Icons8 (https://icons8.com)",
    "images": "Photos from Unsplash (https://unsplash.com)"
  },
  "workers": "workers"
}
