/**app.wxss**/
/* 导入图标增强样式 */
@import '/assets/styles/icon-styles.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/* 全局通用样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 
               'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', Arial, sans-serif;
  line-height: 1.6;
  color: #333;
  background-color: #f8f8f8;
  font-size: 28rpx;
}

/* 全局过渡动画 */
.transition-base {
  transition: all 0.3s ease;
}

/* 响应式内容容器 */
.content-container {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

/* 禁用系统默认按钮样式 */
button {
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: normal;
}

button::after {
  border: none;
} 
