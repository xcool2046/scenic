.management-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #000000 0%, #1c1c1e 50%, #2c2c2e 100%);
  padding: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

/* é¡µé¢æ ‡é¢˜ - Appleé£æ ¼ */
.page-header {
