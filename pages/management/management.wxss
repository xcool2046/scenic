}

.service-label {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
}

/* æœåŠ¡ç›‘æ§åŒºåŸŸ - ç²¾ç®€ç‰ˆ */
.services-section {
  margin-bottom: 60rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 32rpx;
  padding: 0 20rpx;
  opacity: 0.9;
  letter-spacing: -0.5rpx;
}

.services-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.service-item {
  background: rgba(255, 255, 255, 0.04);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.06);
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.service-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.08);
}

.service-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  position: relative;
}

.service-dot::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border-radius: 50%;
  opacity: 0.3;
  animation: servicePulse 2.5s ease-in-out infinite;
}

@keyframes servicePulse {
  0%, 100% {
    transform: scale(0.8);
    opacity: 0.3;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.1;
  }
}

.service-dot.normal {
  background: #30d158;
}

.service-dot.normal::after {
  background: #30d158;
}

.service-dot.warning {
  background: #ff9f0a;
}

.service-dot.warning::after {
  background: #ff9f0a;
}

.service-dot.error {
  background: #ff453a;
}

.service-dot.error::after {
  background: #ff453a;
}

.service-name {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
  text-align: center;
  opacity: 0.85;
  letter-spacing: 0.5rpx;
}

