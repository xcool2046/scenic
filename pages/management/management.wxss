/* æ ¸å¿ƒæŒ‡æ ‡ Bento Grid - é»„é‡‘æ¯”ä¾‹ */
.metrics-grid {
  display: grid;
  grid-template-columns: 1.618fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 80rpx;
  height: 480rpx;
}

/* é€šç”¨å¡ç‰‡åŸºç¡€æ ·å¼ */
.metric-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-radius: 32rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  padding: 24rpx;
}

/* Appleå¼æŒ‰å‹åé¦ˆ */
.metric-card:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.08);
  transition: all 0.15s cubic-bezier(0.4, 0, 0.2, 1);
}

/* ğŸ¯ è¶…çº§ç„¦ç‚¹ï¼šä»Šæ—¥è®¿å®¢å¡ç‰‡ */
.hero-card {
  grid-row: span 2;
  background: rgba(0, 122, 255, 0.08);
  border-color: rgba(0, 122, 255, 0.2);
  position: relative;
}

.hero-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
  width: 100%;
  height: 100%;
}

.hero-number {
  font-size: 120rpx;
  font-weight: 900;
  color: #007AFF;
  line-height: 0.9;
  margin-bottom: 16rpx;
  display: block;
  text-shadow: 0 0 60rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  font-variant-numeric: tabular-nums;
  white-space: nowrap;
}

.hero-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
  letter-spacing: 2rpx;
  opacity: 0.8;
}

/* æ•°å­—åŠ¨ç”»æ—¶çš„è„‰å†²æ•ˆæœ */
.hero-pulse {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(0, 122, 255, 0.2) 0%, transparent 70%);
  opacity: 0;
  pointer-events: none;
}

.hero-pulse.animating {
  animation: heroPulse 2s ease-out;
}

@keyframes heroPulse {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: translate(-50%, -50%) scale(2);
    opacity: 0;
  }
}

/* ç³»ç»ŸçŠ¶æ€å¡ç‰‡ - ç®€æ´ç‰ˆ */
.status-card {
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx;
  justify-content: center;
}

.status-indicator {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  position: relative;
  margin: 0 auto;
}

.status-indicator::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border-radius: 50%;
  opacity: 0.4;
  animation: statusBreathe 3s ease-in-out infinite;
}

/* Appleå¼å‘¼å¸åŠ¨ç”» */
@keyframes statusBreathe {
  0%, 100% {
    transform: scale(0.9);
    opacity: 0.4;
  }
  50% {
    transform: scale(1.1);
    opacity: 0.1;
  }
}

.status-indicator.normal {
  background: #30d158;
  box-shadow: 0 0 24rpx rgba(48, 209, 88, 0.4);
}

.status-indicator.normal::after {
  background: #30d158;
}

.status-indicator.warning {
  background: #ff9f0a;
  box-shadow: 0 0 24rpx rgba(255, 159, 10, 0.4);
}

.status-indicator.warning::after {
  background: #ff9f0a;
}

.status-indicator.error {
  background: #ff453a;
  box-shadow: 0 0 24rpx rgba(255, 69, 58, 0.4);
}

.status-indicator.error::after {
  background: #ff453a;
}

.status-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
  opacity: 0.9;
  text-align: center;
  line-height: 1.2;
}

/* æœåŠ¡æ¦‚è§ˆå¡ç‰‡ - æç®€ç‰ˆ */
.service-card {
  flex-direction: column;
  gap: 12rpx;
  padding: 24rpx;
  justify-content: center;
}

.service-ratio {
  font-size: 40rpx;
  font-weight: 800;
  color: #30d158;
  display: block;
  text-shadow: 0 0 20rpx rgba(48, 209, 88, 0.3);
  font-variant-numeric: tabular-nums;
