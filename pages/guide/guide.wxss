/* pages/guide/guide.wxss */
.page {
  padding: 0 0 30rpx 0;
  background-color: #f5f5f5;
}

/* 地图预览 */
.map-container {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.map-preview {
  width: 100%;
  height: 100%;
}

.map-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,0.5);
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.map-text {
  color: #fff;
  font-size: 28rpx;
}

/* 章节标题 */
.section-title {
  margin: 30rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title > text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.sort-option {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.sort-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}

/* 景点列表 */
.spot-list {
  padding: 0 30rpx;
}

.spot-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.spot-image {
  width: 220rpx;
  height: 180rpx;
  flex-shrink: 0;
}

.spot-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.spot-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.spot-title > text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.spot-tag {
  display: flex;
  align-items: center;
  height: 30rpx;
}

.spot-tag image {
  width: 30rpx;
  height: 30rpx;
}

.spot-tag.hot {
  color: #FF9500;
}

.spot-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.spot-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #999;
}

.spot-distance, .spot-duration {
  display: flex;
  align-items: center;
}

.spot-distance text, .spot-duration text {
  margin-left: 6rpx;
}

/* 路线卡片 */
.route-cards {
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.route-card {
  position: relative;
  height: 160rpx;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.route-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.route-card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to right, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.4) 50%, rgba(0,0,0,0.1) 100%);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.route-card-content {
  color: #fff;
}

.route-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.route-details {
  display: flex;
  font-size: 24rpx;
  opacity: 0.8;
}

.route-spots {
  margin-right: 20rpx;
}

/* 便利设施 */
.facility-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.facility-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
}

.facility-item text {
  font-size: 24rpx;
  color: #333;
  margin-top: 8rpx;
  text-align: center;
} 