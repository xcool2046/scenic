/* pages/guide/map/map.wxss - 数字奢品地图设计 */
.map-container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

/* 返回按钮 - Apple风格 */
.back-button {
  position: absolute;
  top: 88rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  box-shadow: 
    0 8rpx 24rpx rgba(0,0,0,0.1),
    0 2rpx 6rpx rgba(0,0,0,0.05);
  transition: all 0.2s ease;
}

.back-button:active {
  transform: scale(0.95);
  background: rgba(255,255,255,0.95);
}

.back-icon {
  font-size: 36rpx;
  font-weight: 300;
  color: #1a1a1a;
  line-height: 1;
}

/* 顶部筛选栏样式 - 精简为两个核心类别 */
.filter-bar {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  right: 32rpx;
  height: 88rpx;
  z-index: 10;
}

.filter-scroll {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(248,249,250,0.9) 100%);
  border-radius: 44rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.8);
  box-shadow: 
    0 8rpx 32rpx rgba(0,0,0,0.08),
    0 2rpx 8rpx rgba(0,0,0,0.04);
}

.filter-list {
  display: inline-flex;
  padding: 0 24rpx;
  height: 100%;
  gap: 8rpx;
}

.filter-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  height: 68rpx;
  margin: 10rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #6c757d;
  border-radius: 34rpx;
  transition: all 0.3s ease;
}

.filter-item:active {
  transform: scale(0.96);
}

.filter-item.active {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(0,123,255,0.3);
}

/* 移除复杂的路线选择器，简化为单一操作 */
.route-toggle {
  position: absolute;
  top: 140rpx;
  right: 32rpx;
  z-index: 10;
}

.route-btn {
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(248,249,250,0.9) 100%);
  border-radius: 28rpx;
  padding: 20rpx 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #007bff;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(0,123,255,0.2);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

.route-btn:active {
  transform: scale(0.96);
}

.route-btn.active {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 24rpx rgba(0,123,255,0.3);
}

/* 移除周边设施快捷按钮，简化UI */

/* 简化功能按钮组 */
.function-buttons {
  position: absolute;
  bottom: 240rpx;
  right: 32rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.function-btn {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(248,249,250,0.9) 100%);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255,255,255,0.6);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  color: #6c757d;
  transition: all 0.3s ease;
}

.function-btn:active {
  transform: scale(0.92);
}

.function-btn.active {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 24rpx rgba(0,123,255,0.3);
}

/* 用户位置按钮 */
.location-btn {
  position: absolute;
  bottom: 160rpx;
  right: 32rpx;
  z-index: 10;
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #ffffff;
  box-shadow: 
    0 6rpx 24rpx rgba(40,167,69,0.3),
    0 2rpx 8rpx rgba(40,167,69,0.2);
  transition: all 0.3s ease;
}

.location-btn:active {
  transform: scale(0.92);
}

/* 底部景点信息面板 - Apple风格卡片 */
.info-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 
    0 -12rpx 40rpx rgba(0,0,0,0.15),
    0 -4rpx 12rpx rgba(0,0,0,0.08);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  z-index: 200;
}

.info-panel.show {
  transform: translateY(0);
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.info-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1a1a1a;
  letter-spacing: -0.3rpx;
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0,0,0,0.05);
  border-radius: 28rpx;
  font-size: 32rpx;
  color: #6c757d;
  font-weight: 300;
  transition: all 0.2s ease;
}

.close-btn:active {
  background: rgba(0,0,0,0.1);
  transform: scale(0.95);
}

.info-content {
  padding: 0 32rpx 32rpx;
}

.info-desc {
  font-size: 28rpx;
  color: #6c757d;
  line-height: 1.6;
  letter-spacing: 0.2rpx;
  margin-bottom: 32rpx;
  display: block;
}

.info-actions {
  display: flex;
  justify-content: center;
}

.action-btn {
  height: 88rpx;
  padding: 0 48rpx;
  border-radius: 22rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  cursor: pointer;
}

.action-btn.primary {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(0,123,255,0.3);
}

.action-btn.primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,123,255,0.3);
}

/* 响应式调整 */
@media (max-height: 600px) {
  .info-panel {
    border-radius: 24rpx 24rpx 0 0;
  }
  
  .info-header {
    padding: 24rpx 32rpx 20rpx;
  }
  
  .info-title {
    font-size: 32rpx;
  }
  
  .info-content {
    padding: 0 32rpx 24rpx;
  }
  
  .info-desc {
    font-size: 26rpx;
    margin-bottom: 24rpx;
  }
  
  .action-btn {
    height: 76rpx;
    font-size: 26rpx;
  }
}

/* 景点元信息 - 超大数字设计 */
.info-meta {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 20rpx;
}

.info-type {
  font-size: 28rpx;
  font-weight: 600;
  color: #007bff;
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.info-distance {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.distance-number {
  font-size: 48rpx;
  font-weight: 800;
  color: #007bff;
  line-height: 1;
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.distance-label {
  font-size: 20rpx;
  color: #adb5bd;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5rpx;
}

/* 操作按钮组 */
.info-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 56rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn.primary {
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0,123,255,0.3);
}

.action-btn.secondary {
  background: rgba(0,123,255,0.1);
  color: #007bff;
  border: 1rpx solid rgba(0,123,255,0.2);
}

.action-btn:active {
  transform: scale(0.98);
}

/* 地图主体 */
.map {
  width: 100%;
  height: 100%;
} 