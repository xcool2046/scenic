/* pages/guide/nearby/nearby.wxss - Apple风格附近设施页 */
.container {
  padding: 30rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
}

.header {
  margin-bottom: 40rpx;
  padding: 0 8rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1a1a1a;
  letter-spacing: -0.5rpx;
  line-height: 1.2;
  display: block;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
  letter-spacing: 0.2rpx;
  display: block;
}

.facility-list {
  width: 100%;
}

.facility-item {
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0,0,0,0.08),
    0 2rpx 8rpx rgba(0,0,0,0.04);
  border: 1rpx solid rgba(255,255,255,0.8);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.facility-item:active {
  transform: translateY(-2rpx);
  box-shadow: 
    0 12rpx 40rpx rgba(0,0,0,0.12),
    0 4rpx 12rpx rgba(0,0,0,0.08);
}

.facility-info {
  display: flex;
  flex: 1;
  align-items: center;
}

.facility-icon {
  width: 96rpx;
  height: 96rpx;
  margin-right: 24rpx;
  border-radius: 20rpx;
  background: rgba(0,123,255,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.facility-icon image {
  width: 48rpx;
  height: 48rpx;
}

.facility-details {
  flex: 1;
}

.facility-name {
  font-size: 34rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 8rpx;
  letter-spacing: -0.3rpx;
  line-height: 1.3;
}

.facility-distance {
  font-size: 56rpx;
  font-weight: 800;
  color: #007bff;
  line-height: 1;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.facility-status {
  font-size: 24rpx;
  margin-bottom: 6rpx;
  font-weight: 600;
  letter-spacing: 0.3rpx;
}

.status-open {
  color: #28a745;
}

.status-closed {
  color: #dc3545;
}

.facility-rating {
  font-size: 24rpx;
  color: #ffc107;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.facility-actions {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.navigate-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: rgba(0,123,255,0.1);
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.navigate-btn:active {
  transform: scale(0.95);
  background: rgba(0,123,255,0.2);
}

.navigate-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.navigate-btn text {
  font-size: 22rpx;
  color: #007bff;
  font-weight: 600;
  letter-spacing: 0.2rpx;
}

.empty-tip {
  text-align: center;
  padding: 120rpx 0;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0,0,0,0.08),
    0 2rpx 8rpx rgba(0,0,0,0.04);
  border: 1rpx solid rgba(255,255,255,0.8);
}

.empty-tip text {
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
  letter-spacing: 0.2rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: linear-gradient(135deg, #ffffff 0%, #fafbfc 100%);
  border-radius: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(0,0,0,0.08),
    0 2rpx 8rpx rgba(0,0,0,0.04);
  border: 1rpx solid rgba(255,255,255,0.8);
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
  animation: loading-spin 1.5s linear infinite;
}

@keyframes loading-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading text {
  font-size: 28rpx;
  color: #6c757d;
  font-weight: 500;
  letter-spacing: 0.2rpx;
}

.footer-tip {
  text-align: center;
  padding: 32rpx 0;
  margin-top: 24rpx;
}

.footer-tip text {
  font-size: 24rpx;
  color: #adb5bd;
  font-weight: 500;
  letter-spacing: 0.3rpx;
  opacity: 0.8;
} 