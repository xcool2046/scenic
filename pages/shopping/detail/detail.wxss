/* 商品详情页样式 - 数字奢品风格 */

.detail-container {
  min-height: 100vh;
  background: #ffffff;
  padding-bottom: 200rpx; /* 为底部操作栏留出空间 */
}

/* 商品图片区域 */
.image-section {
  position: relative;
  height: 750rpx;
  background: #fafafa;
}

.product-swiper {
  width: 100%;
  height: 100%;
}

.product-image {
  width: 100%;
  height: 100%;
}

.image-indicator {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.indicator-text {
  font-size: 22rpx;
  font-weight: 500;
}

/* 商品信息区域 */
.info-section {
  padding: 40rpx 32rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f5f5f5;
}

.product-header {
  margin-bottom: 32rpx;
}

.product-badge {
  display: inline-block;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.product-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #333333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.product-description {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 价格区域 - 焦点突出 */
.price-section {
  display: flex;
  align-items: baseline;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.price-main {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 32rpx;
  color: #2657FD;
  font-weight: 600;
  margin-right: 4rpx;
}

.price-value {
  font-size: 56rpx; /* 超大字体作为视觉焦点 */
  color: #2657FD;
  font-weight: 700;
  line-height: 1;
}

.price-original {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.original-text {
  font-size: 20rpx;
  color: #999999;
}

.original-value {
  font-size: 24rpx;
  color: #999999;
  text-decoration: line-through;
}

/* 销售信息 */
.sales-info {
  display: flex;
  gap: 48rpx;
}

.sales-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.sales-label {
  font-size: 24rpx;
  color: #999999;
}

.sales-value {
  font-size: 24rpx;
  color: #666666;
  font-weight: 600;
}

/* 商品详情区域 */
.details-section {
  padding: 40rpx 32rpx;
  background: #ffffff;
  margin-top: 16rpx;
}

.section-title {
  margin-bottom: 32rpx;
}

.title-main {
  font-size: 32rpx;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8rpx;
}

.title-sub {
  font-size: 20rpx;
  color: #666666;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.details-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-item {
  padding: 20rpx 24rpx;
  background: #fafafa;
  border-radius: 12rpx;
  border-left: 4rpx solid #2657FD;
}

.detail-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.4;
}

/* 数量选择区域 */
.quantity-section {
  padding: 40rpx 32rpx;
  background: #ffffff;
  margin-top: 16rpx;
}

.quantity-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0;
  background: #f8f8f8;
  border-radius: 16rpx;
  overflow: hidden;
  max-width: 240rpx;
}

.quantity-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  border: 1rpx solid #e8e8e8;
  transition: all 0.3s ease;
}

.quantity-btn.disabled {
  background: #f5f5f5;
  color: #cccccc;
}

.quantity-btn:not(.disabled):active {
  background: #2657FD;
  color: #ffffff;
  transform: scale(0.95);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
}

.quantity-input {
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  background: #ffffff;
  border: 1rpx solid #e8e8e8;
  border-left: none;
  border-right: none;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.action-left {
  display: flex;
  align-items: center;
}

.cart-btn {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  border: 1rpx solid #e8e8e8;
}

.cart-btn:active {
  transform: scale(0.9);
  background: #e8e8e8;
}

.cart-icon {
  font-size: 32rpx;
  color: #666666;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff4757;
  color: #ffffff;
  font-size: 18rpx;
  font-weight: 600;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.action-right {
  flex: 1;
  display: flex;
  gap: 16rpx;
}

.add-cart-btn,
.buy-now-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  transition: all 0.3s ease;
}

.add-cart-btn {
  background: #f8f8f8;
  color: #333333;
  border: 1rpx solid #e8e8e8;
}

.add-cart-btn:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.buy-now-btn {
  background: linear-gradient(135deg, #2657FD 0%, #1e4ed8 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(38, 87, 253, 0.3);
}

.buy-now-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(38, 87, 253, 0.4);
}

.add-cart-btn.loading,
.buy-now-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.btn-text {
  font-size: 28rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  backdrop-filter: blur(5rpx);
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid #e8e8e8;
  border-top: 4rpx solid #2657FD;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #666666;
} 