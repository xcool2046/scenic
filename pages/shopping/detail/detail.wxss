/* 商品详情页样式 - Apple风格极简 */

.detail-container {
  min-height: 100vh;
  background: #f5f5f7;
  padding-bottom: 200rpx;
}

/* 商品图片区域 - 简化为单图 */
.image-section {
  position: relative;
  height: 600rpx;
  background: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 0 0 22rpx 22rpx;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 0 0 22rpx 22rpx;
}

/* 商品信息区域 */
.info-section {
  padding: 40rpx 32rpx;
  background: #ffffff;
  border-radius: 22rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.product-header {
  margin-bottom: 32rpx;
}

.product-badge {
  display: inline-block;
  background: #007AFF;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #1d1d1f;
  line-height: 1.3;
  margin-bottom: 16rpx;
}

.product-description {
  font-size: 28rpx;
  color: #86868b;
  line-height: 1.5;
}

/* 价格区域 - 焦点突出 */
.price-section {
  display: flex;
  align-items: baseline;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.price-main {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 32rpx;
  color: #007AFF;
  font-weight: 600;
  margin-right: 4rpx;
}

.price-value {
  font-size: 56rpx;
  color: #007AFF;
  font-weight: 700;
  line-height: 1;
}

.price-original {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.original-text {
  font-size: 20rpx;
  color: #86868b;
}

.original-value {
  font-size: 24rpx;
  color: #86868b;
  text-decoration: line-through;
}

/* 销售信息 */
.sales-info {
  display: flex;
  gap: 48rpx;
}

.sales-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.sales-label {
  font-size: 24rpx;
  color: #86868b;
}

.sales-value {
  font-size: 24rpx;
  color: #1d1d1f;
  font-weight: 600;
}

/* 商品详情区域 */
.details-section {
  padding: 40rpx 32rpx;
  background: #ffffff;
  border-radius: 22rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  margin-bottom: 32rpx;
}

.title-main {
  font-size: 32rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.title-sub {
  font-size: 20rpx;
  color: #86868b;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.details-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.detail-item {
  padding: 20rpx 24rpx;
  background: #f5f5f7;
  border-radius: 16rpx;
  border-left: 4rpx solid #007AFF;
}

.detail-text {
  font-size: 26rpx;
  color: #1d1d1f;
  line-height: 1.4;
}

/* 数量选择区域 */
.quantity-section {
  padding: 40rpx 32rpx;
  background: #ffffff;
  border-radius: 22rpx;
  margin: 0 20rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.quantity-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
}

.quantity-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.quantity-btn.disabled {
  opacity: 0.3;
  pointer-events: none;
}

.quantity-btn:active {
  transform: scale(0.9);
  background: #e5e5e7;
}

.btn-text {
  font-size: 40rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.quantity-input {
  width: 120rpx;
  height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
  background: #f6f6f6;
  border-radius: 16rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  border-top: 0.5rpx solid rgba(0, 0, 0, 0.1);
  backdrop-filter: saturate(180%) blur(20rpx);
  display: flex;
  gap: 20rpx;
}

.action-left {
  flex-shrink: 0;
}

.cart-btn {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f6f6f6;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.cart-btn:active {
  transform: scale(0.9);
}

.cart-icon {
  font-size: 36rpx;
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: #ff3b30;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: 600;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.action-right {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.add-cart-btn,
.buy-now-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.2s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.add-cart-btn {
  background: rgba(0, 122, 255, 0.1);
  color: #007AFF;
  border: 2rpx solid #007AFF;
}

.add-cart-btn:active {
  transform: scale(0.95);
  background: rgba(0, 122, 255, 0.2);
}

.buy-now-btn {
  background: #007AFF;
  color: #ffffff;
}

.buy-now-btn:active {
  transform: scale(0.95);
  background: #0056b3;
}

.add-cart-btn.loading,
.buy-now-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #86868b;
  font-weight: 500;
} 