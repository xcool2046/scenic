/* 购物车 - Apple风格极简设计 */

.cart-container {
  min-height: 100vh;
  background: #ffffff;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

/* ==================== 顶部标题栏 ==================== */
.header-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  position: sticky;
  top: 0;
  z-index: 100;
  padding: 40rpx 30rpx 30rpx;
  border-bottom: 0.5rpx solid rgba(0, 0, 0, 0.05);
}

.header-content {
  text-align: center;
}

.page-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 8rpx;
  letter-spacing: -1rpx;
}

.page-subtitle {
  font-size: 22rpx;
  color: rgba(29, 29, 31, 0.6);
  font-weight: 500;
  letter-spacing: 4rpx;
}

/* ==================== 购物车列表 ==================== */
.cart-list {
  flex: 1;
  padding: 30rpx;
}

.cart-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 24rpx;
  transition: all 0.4s cubic-bezier(0.4, 0.0, 0.2, 1);
  animation: fadeInUp 0.6s cubic-bezier(0.4, 0.0, 0.2, 1) forwards;
  opacity: 0;
  transform: translateY(40rpx);
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.cart-item:active {
  transform: scale(0.98);
}

.item-image-wrapper {
  width: 140rpx;
  height: 140rpx;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.item-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.item-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 8rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1d1d1f;
  line-height: 1.3;
  letter-spacing: -0.5rpx;
  flex: 1;
  margin-right: 16rpx;
}

.item-price {
  display: flex;
  align-items: baseline;
  flex-shrink: 0;
}

.price-symbol {
  font-size: 24rpx;
  color: #007AFF;
  font-weight: 600;
}

.price-value {
  font-size: 36rpx;
  color: #007AFF;
  font-weight: 700;
  letter-spacing: -1rpx;
}

.item-description {
  font-size: 24rpx;
  color: rgba(29, 29, 31, 0.7);
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quantity-controls {
  display: flex;
  align-items: center;
  background: rgba(120, 120, 128, 0.12);
  border-radius: 20rpx;
  padding: 8rpx;
}

.quantity-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.quantity-btn.disabled {
  opacity: 0.4;
  box-shadow: none;
}

.quantity-btn:not(.disabled):active {
  transform: scale(0.9);
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.quantity-display {
  min-width: 60rpx;
  text-align: center;
  padding: 0 16rpx;
}

.quantity-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.remove-btn {
  background: rgba(255, 59, 48, 0.1);
  border-radius: 16rpx;
  padding: 12rpx 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
}

.remove-btn:active {
  transform: scale(0.95);
  background: rgba(255, 59, 48, 0.2);
}

.remove-text {
  font-size: 24rpx;
  color: #FF3B30;
  font-weight: 600;
}

/* ==================== 空购物车状态 ==================== */
.empty-cart {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 30rpx;
}

.empty-content {
  text-align: center;
  max-width: 500rpx;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 42rpx;
  font-weight: 700;
  color: #1d1d1f;
  margin-bottom: 12rpx;
  letter-spacing: -1rpx;
}

.empty-subtitle {
  font-size: 26rpx;
  color: rgba(29, 29, 31, 0.6);
  font-weight: 500;
  letter-spacing: 3rpx;
  margin-bottom: 20rpx;
}

.empty-description {
  font-size: 28rpx;
  color: rgba(29, 29, 31, 0.7);
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.empty-action {
  background: #007AFF;
  border-radius: 24rpx;
  padding: 24rpx 48rpx;
  display: inline-block;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.empty-action:active {
  transform: scale(0.95);
  background: #0056b3;
}

.action-text {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 600;
}

/* ==================== 底部结算栏 ==================== */
.checkout-bar {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 0.5rpx solid rgba(0, 0, 0, 0.05);
  padding: 30rpx;
}

.checkout-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24rpx;
}

.total-section {
  flex: 1;
}

.total-quantity {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  margin-bottom: 8rpx;
}

.quantity-label {
  font-size: 24rpx;
  color: rgba(29, 29, 31, 0.7);
}

.quantity-value {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: 700;
}

.quantity-unit {
  font-size: 24rpx;
  color: rgba(29, 29, 31, 0.7);
}

.total-amount {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.amount-label {
  font-size: 26rpx;
  color: rgba(29, 29, 31, 0.8);
  font-weight: 500;
}

.amount-symbol {
  font-size: 32rpx;
  color: #007AFF;
  font-weight: 700;
}

.amount-value {
  font-size: 48rpx;
  color: #007AFF;
  font-weight: 700;
  letter-spacing: -1rpx;
}

.checkout-button {
  background: #007AFF;
  border-radius: 24rpx;
  padding: 24rpx 40rpx;
  min-width: 200rpx;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0.0, 0.2, 1);
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
}

.checkout-button.disabled {
  background: rgba(120, 120, 128, 0.3);
  box-shadow: none;
}

.checkout-button.loading {
  background: rgba(0, 122, 255, 0.7);
}

.checkout-button:not(.disabled):not(.loading):active {
  transform: scale(0.95);
  background: #0056b3;
}

.button-text {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: 600;
}

.checkout-button.disabled .button-text {
  color: rgba(255, 255, 255, 0.6);
}

/* ==================== 底部安全区域 ==================== */
.bottom-safe-area {
  height: env(safe-area-inset-bottom);
  background: rgba(255, 255, 255, 0.95);
}

/* ==================== 加载状态 ==================== */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(10rpx);
}

.loading-content {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  backdrop-filter: blur(20rpx);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(0, 122, 255, 0.2);
  border-top: 4rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 500;
}

/* ==================== 响应式优化 ==================== */
@media (prefers-color-scheme: dark) {
  .cart-container {
    background: #000000;
  }
  
  .cart-item {
    background: #1c1c1e;
  }
  
  .item-name {
    color: #f2f2f7;
  }
  
  .page-title {
    color: #f2f2f7;
  }
}

/* ==================== 加载动效 ==================== */
.cart-item:nth-child(1) { animation-delay: 0ms; }
.cart-item:nth-child(2) { animation-delay: 100ms; }
.cart-item:nth-child(3) { animation-delay: 200ms; }
.cart-item:nth-child(4) { animation-delay: 300ms; }
.cart-item:nth-child(5) { animation-delay: 400ms; } 