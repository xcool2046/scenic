<!--购物车 - Apple风格极简版-->
<view class="cart-container">
  
  <!-- 顶部标题栏 -->
  <view class="header-section">
    <view class="header-content">
      <view class="page-title">购物车</view>
      <view class="page-subtitle">SHOPPING CART</view>
    </view>
  </view>

  <!-- 购物车商品列表 -->
  <scroll-view class="cart-list" scroll-y="true" enhanced="true" wx:if="{{cartItems.length > 0}}">
    <view class="cart-item" wx:for="{{cartItems}}" wx:key="id"
          style="animation-delay: {{index * 100}}ms">
      
      <view class="item-image-wrapper">
        <image class="item-image" src="{{item.image}}" mode="aspectFill"></image>
      </view>
      
      <view class="item-content">
        <view class="item-header">
          <view class="item-name">{{item.name}}</view>
          <view class="item-price">
            <text class="price-symbol">¥</text>
            <text class="price-value">{{item.price}}</text>
          </view>
        </view>
        
        <view class="item-description">{{item.description}}</view>
        
        <view class="item-footer">
          <view class="quantity-controls">
            <view class="quantity-btn decrease {{item.quantity <= 1 ? 'disabled' : ''}}" 
                  bindtap="decreaseQuantity" 
                  data-id="{{item.id}}">
              <text class="btn-text">−</text>
            </view>
            <view class="quantity-display">
              <text class="quantity-text">{{item.quantity}}</text>
            </view>
            <view class="quantity-btn increase" 
                  bindtap="increaseQuantity" 
                  data-id="{{item.id}}">
              <text class="btn-text">+</text>
            </view>
          </view>
          
          <view class="remove-btn" bindtap="removeItem" data-id="{{item.id}}">
            <text class="remove-text">移除</text>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>

  <!-- 空购物车状态 -->
  <view class="empty-cart" wx:if="{{cartItems.length === 0 && !loading}}">
    <view class="empty-content">
      <view class="empty-icon">🛒</view>
      <view class="empty-title">购物车空空如也</view>
      <view class="empty-subtitle">CART IS EMPTY</view>
      <view class="empty-description">去发现一些美好的商品吧</view>
      <view class="empty-action" bindtap="continueShopping">
        <text class="action-text">开始购物</text>
      </view>
    </view>
  </view>

  <!-- 底部结算栏 -->
  <view class="checkout-bar" wx:if="{{cartItems.length > 0}}">
    <view class="checkout-content">
      <view class="total-section">
        <view class="total-quantity" wx:if="{{totalQuantity > 0}}">
          <text class="quantity-label">共</text>
          <text class="quantity-value">{{totalQuantity}}</text>
          <text class="quantity-unit">件商品</text>
        </view>
        <view class="total-amount">
          <text class="amount-label">合计</text>
          <text class="amount-symbol">¥</text>
          <text class="amount-value">{{totalAmount}}</text>
        </view>
      </view>
      
      <view class="checkout-button {{checking ? 'loading' : ''}} {{totalQuantity === 0 ? 'disabled' : ''}}" 
            bindtap="checkout">
        <text class="button-text">{{checking ? '处理中...' : '立即结算'}}</text>
      </view>
    </view>
  </view>

  <!-- 底部安全区域 -->
  <view class="bottom-safe-area"></view>

  <!-- 加载状态 -->
  <view class="loading-overlay" wx:if="{{loading}}">
    <view class="loading-content">
      <view class="loading-spinner"></view>
      <text class="loading-text">加载中...</text>
    </view>
  </view>

</view> 