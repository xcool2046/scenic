/**index.wxss**/
.container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

/* 轮播图样式 */
.banner-container {
  position: relative;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.banner-swiper {
  width: 100%;
  height: 360rpx;
  border-radius: 0 0 12rpx 12rpx;
  overflow: hidden;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  transition: all 0.3s;
  transform: scale(0.95);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.banner-item.active {
  transform: scale(1);
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0));
  border-radius: 0 0 12rpx 12rpx;
}

/* 自定义指示器 */
.banner-indicator {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  margin: 0 6rpx;
  transition: all 0.3s;
}

.indicator-dot.active {
  width: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

/* 信息面板样式 */
.info-panel {
  margin: -50rpx 30rpx 30rpx;
  padding: 30rpx;
  background: linear-gradient(to right, #f8f8f8, #fff);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 10;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #eee;
}

/* 服务卡片样式 */
.service-cards {
  display: flex;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.service-card {
  flex: 1;
  height: 180rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s;
  background-position: center;
  background-size: cover;
  position: relative;
  overflow: hidden;
}

.service-card:after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.service-card:active {
  transform: scale(0.98);
}

.service-card.ticket {
  margin-right: 20rpx;
  background-color: #f6f6f6;
}

.service-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
}

.service-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

/* 图标圆圈 */
.icon-circle {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.icon-primary {
  background-color: rgba(26, 173, 25, 0.15);  /* 使用绿色，与图片中一致 */
}

.icon-circle .icon-image {
  width: 60%;
  height: 60%;
}

.service-action {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.3);
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  margin-top: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #fff;
  margin-right: 6rpx;
}

/* 公共section样式 */
.section {
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.section-header {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}

.section-title:before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  height: 30rpx;
  width: 8rpx;
  background-color: #1AAD19;
  border-radius: 4rpx;
}

/* 活动列表样式 */
.activity-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.activity-item {
  position: relative;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.activity-item:active {
  background-color: #f9f9f9;
  transform: scale(0.98);
}

.activity-time {
  width: 100rpx;
  font-size: 26rpx;
  color: #666;
  flex-shrink: 0;
}

.activity-content {
  flex: 1;
  padding: 0 15rpx;
}

.activity-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.activity-desc {
  font-size: 24rpx;
  color: #999;
}

.activity-item.notice .activity-title {
  color: #ff4d4f;
}

/* 快捷服务样式 */
.quick-services {
  margin-bottom: 40rpx;
  padding: 0 30rpx;
}

.service-row {
  display: flex;
  justify-content: space-between;
}

.quick-service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-service-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
}

/* 便捷设施列表 */
.facility-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.facility-item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.facility-name {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
}

/* CDN图标样式优化 */
.facility-icon .icon-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: contain;
}

/* 底部间隙 */
.bottom-gap {
  height: 50rpx;
}

/* 加载动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(60rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.info-panel, .service-cards, .section {
  animation: slideUp 0.5s ease-out forwards;
}

.service-cards {
  animation-delay: 0.1s;
}

.section:nth-of-type(1) {
  animation-delay: 0.2s;
}

.section:nth-of-type(2) {
  animation-delay: 0.3s;
}

.quick-services {
  animation: slideUp 0.5s ease-out 0.4s forwards;
  opacity: 0;
  animation-fill-mode: forwards;
}

/* 添加加载失败提示样式 */
.loading-timeout {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.9);
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
  border-bottom: 1rpx solid #eee;
}

.loading-timeout text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.retry-btn {
  background-color: #1AAD19;
  color: #fff;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 优化快捷服务项目 */
.quick-service-item:active {
  opacity: 0.8;
  transform: scale(0.95);
}
