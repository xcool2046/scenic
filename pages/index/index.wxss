/**index.wxss**/
.container {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
  box-sizing: border-box;
  background: #FFFFFF;
}

/* 轮播图样式 */
.banner-container {
  position: relative;
  width: 100%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.banner-swiper {
  width: 100%;
  height: 360rpx;
  border-radius: 0 0 12rpx 12rpx;
  overflow: hidden;
}

.banner-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  transition: all 0.3s;
  transform: scale(0.95);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.banner-item.active {
  transform: scale(1);
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  background: linear-gradient(to top, rgba(0,0,0,0.7), rgba(0,0,0,0));
  border-radius: 0 0 12rpx 12rpx;
}

/* 自定义指示器 */
.banner-indicator {
  position: absolute;
  bottom: 20rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.indicator-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
  margin: 0 6rpx;
  transition: all 0.3s;
}

.indicator-dot.active {
  width: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

/* 信息面板样式 */
.info-panel {
  margin: -50rpx 30rpx 30rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 10;
  backdrop-filter: blur(10rpx);
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.33%;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #eee;
}

/* 服务卡片样式 */
.service-cards {
  display: flex;
  padding: 0 30rpx;
  margin-bottom: 40rpx;
}

.service-card {
  flex: 1;
  height: 180rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
  background-position: center;
  background-size: cover;
  position: relative;
  overflow: hidden;
}

.service-card:after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.service-card:active {
  transform: scale(0.98);
}

.service-card.ticket {
  margin-right: 20rpx;
  background-color: #f6f6f6;
}

.service-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  pointer-events: none;
}

.service-content view,
.service-content text,
.service-content image {
  pointer-events: none;
}

.service-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

/* 智慧服务样式 */
.smart-services {
  margin: 0 30rpx 40rpx;
}

.section-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.section-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 主要服务卡片（扫码进码） */
.service-row-main {
  margin-bottom: 20rpx;
}

.service-main-item {
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 12rpx 40rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.service-main-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
}

.service-main-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-main-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 24rpx rgba(255, 107, 107, 0.4);
  position: relative;
  overflow: hidden;
}

.service-main-icon::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shine 2s infinite;
}

@keyframes shine {
  0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
  100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

.service-main-icon image {
  width: 40rpx;
  height: 40rpx;
  filter: brightness(0) invert(1);
}

.service-main-info {
  flex: 1;
}

.service-main-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.service-main-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 服务行样式 */
.service-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.service-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 25rpx 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.service-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

.service-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

/* 不同服务的图标颜色 */
.service-item:nth-child(1) .service-icon {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.service-item:nth-child(2) .service-icon {
  background: linear-gradient(135deg, #4ecdc4 0%, #36b5aa 100%);
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.3);
}

.service-row:nth-child(3) .service-item:nth-child(1) .service-icon {
  background: linear-gradient(135deg, #45b7d1 0%, #3a9bc1 100%);
  box-shadow: 0 4rpx 16rpx rgba(69, 183, 209, 0.3);
}

.service-row:nth-child(3) .service-item:nth-child(2) .service-icon {
  background: linear-gradient(135deg, #96ceb4 0%, #85c1a3 100%);
  box-shadow: 0 4rpx 16rpx rgba(150, 206, 180, 0.3);
}

.service-row:nth-child(4) .service-item:nth-child(1) .service-icon {
  background: linear-gradient(135deg, #ffeaa7 0%, #fdcb6e 100%);
  box-shadow: 0 4rpx 16rpx rgba(255, 234, 167, 0.3);
}

.service-row:nth-child(4) .service-item:nth-child(2) .service-icon {
  background: linear-gradient(135deg, #a29bfe 0%, #6c5ce7 100%);
  box-shadow: 0 4rpx 16rpx rgba(162, 155, 254, 0.3);
}

.service-icon image {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) invert(1);
}

.service-info {
  flex: 1;
}

.service-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.service-desc {
  display: block;
  font-size: 22rpx;
  color: #666;
  line-height: 1.4;
}

/* 图标样式 */
.icon-base {
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-responsive {
  width: 80rpx;
  height: 80rpx;
}

.icon-circle {
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
}

.icon-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
}

.icon-image {
  width: 40rpx;
  height: 40rpx;
}

/* 今日活动样式 */
.section {
  margin: 0 30rpx 40rpx;
}

.today-activities .section-header {
  text-align: left;
  margin-bottom: 20rpx;
}

.today-activities .section-title {
  font-size: 32rpx;
  color: #ffffff;
  text-align: left;
}

.activity-list {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 20rpx;
  backdrop-filter: blur(10rpx);
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-time {
  width: 100rpx;
  font-size: 22rpx;
  color: #ff6b6b;
  font-weight: 500;
  flex-shrink: 0;
}

.activity-content {
  flex: 1;
  margin-left: 20rpx;
}

.activity-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.activity-desc {
  font-size: 22rpx;
  color: #999;
}

.icon-small {
  width: 40rpx;
  height: 40rpx;
  margin-left: 15rpx;
}

/* 快捷服务样式 */
.quick-services {
  margin: 0 30rpx 40rpx;
}

.quick-service-row {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.quick-service-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  transition: all 0.3s ease;
}

.quick-service-item:active {
  transform: scale(0.95);
}

.quick-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.quick-service-item:nth-child(1) .quick-icon {
  background: linear-gradient(135deg, #667eea, #764ba2);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.quick-service-item:nth-child(2) .quick-icon {
  background: linear-gradient(135deg, #4ecdc4, #36b5aa);
  box-shadow: 0 4rpx 16rpx rgba(78, 205, 196, 0.3);
}

.quick-service-item:nth-child(3) .quick-icon {
  background: linear-gradient(135deg, #45b7d1, #3a9bc1);
  box-shadow: 0 4rpx 16rpx rgba(69, 183, 209, 0.3);
}

.quick-service-item:nth-child(4) .quick-icon {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.quick-icon.emergency {
  background: linear-gradient(135deg, #ff6b6b, #ee5a52);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.3);
}

.quick-icon image {
  width: 36rpx;
  height: 36rpx;
}

.quick-service-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 便捷设施样式 */
.facility-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.facility-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.facility-item:active {
  background-color: rgba(102, 126, 234, 0.1);
  transform: scale(0.95);
}

.facility-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.facility-icon image {
  width: 30rpx;
  height: 30rpx;
}

.facility-name {
  font-size: 22rpx;
  color: #333;
  text-align: center;
  font-weight: 500;
}

/* 底部间距 */
.bottom-gap {
  height: 100rpx;
}

/* 加载状态 */
.loading-timeout {
  text-align: center;
  padding: 100rpx 0;
  color: rgba(255, 255, 255, 0.8);
}

.retry-btn {
  margin-top: 20rpx;
  padding: 20rpx 40rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 25rpx;
  color: #ffffff;
  font-size: 24rpx;
  display: inline-block;
}