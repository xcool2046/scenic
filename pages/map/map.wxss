/* pages/map/map.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.actions {
  display: flex;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 30rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 6rpx;
}

.action-btn text {
  font-size: 24rpx;
  color: #666;
}

.map-container {
  position: relative;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  background-color: #fff;
}

.map-image {
  width: 100%;
  height: 500rpx;
}

.spot-markers {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.spot-marker {
  position: absolute;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  pointer-events: auto;
}

.marker-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.marker-name {
  font-size: 22rpx;
  color: #333;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  margin-top: 4rpx;
  white-space: nowrap;
  max-width: 150rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.legend {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.legend-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.legend-items {
  display: flex;
  flex-wrap: wrap;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  margin-bottom: 16rpx;
}

.legend-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.legend-dot.entrance {
  background-color: #1890ff;
}

.legend-dot.toilet {
  background-color: #52c41a;
}

.legend-dot.food {
  background-color: #faad14;
}

.legend-dot.rest {
  background-color: #722ed1;
}

.legend-item text {
  font-size: 24rpx;
  color: #666;
}

.spot-list {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.spot-list-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.spot-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.spot-item:last-child {
  border-bottom: none;
}

.spot-name {
  font-size: 28rpx;
  color: #333;
}

.spot-arrow {
  width: 32rpx;
  height: 32rpx;
}

.loading, .error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.error text {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.retry-btn {
  background-color: #1AAD19;
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
} 