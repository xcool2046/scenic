/* pages/map/map.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  position: relative;
}

/* 头部区域 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #eee;
  z-index: 10;
  height: 120rpx;
  box-sizing: border-box;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f8f8f8;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.action-btn:active {
  background-color: #e8e8e8;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 地图容器 - 修复尺寸问题 */
.map-container {
  flex: 1;
  position: relative;
  overflow: hidden;
  /* 简化高度计算，避免CSS冲突 */
  width: 100%;
  min-height: 600rpx;
}

/* 修正类名：map-view 对应 WXML 中的实际类名 */
.map-view {
  width: 100%;
  height: 100%;
  min-height: 600rpx;
  position: relative;
  display: block;
}

/* 保持向后兼容 */
.map {
  width: 100%;
  height: 100%;
  min-height: 500rpx;
}

/* 设计令牌系统 - 统一层级管理 */
:root {
  --z-base: 1;
  --z-tooltip: 10;
  --z-dropdown: 100;
  --z-sticky: 200;
  --z-overlay: 500;
  --z-modal: 1000;
  --z-notification: 1100;
  --z-max: 2000;
  
  /* 统一尺寸令牌 */
  --control-size: 88rpx;
  --control-gap: 12rpx;
  --border-radius-sm: 12rpx;
  --border-radius-md: 20rpx;
  --border-radius-lg: 24rpx;
  
  /* 统一颜色令牌 */
  --color-primary: #2657FD;
  --color-primary-hover: #1e4bdb;
  --color-white-alpha-95: rgba(255, 255, 255, 0.95);
  --color-white-alpha-80: rgba(255, 255, 255, 0.8);
  --color-black-alpha-06: rgba(0, 0, 0, 0.06);
}

/* 地图控件 - 使用统一层级系统 */
.map-controls {
  position: absolute;
  top: calc(20rpx + env(safe-area-inset-top));
  right: 20rpx;
  display: flex;
  flex-direction: column;
  gap: var(--control-gap);
  z-index: var(--z-overlay); /* 统一使用层级令牌 */
  /* 确保控件在所有设备上都能正常显示 */
  max-height: calc(100vh - 300rpx);
  overflow: hidden;
}

.ctrl-item {
  width: 88rpx;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(10rpx);
  transition: all 0.2s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
}

.ctrl-item:active {
  background-color: rgba(240, 240, 240, 0.95);
  transform: scale(0.95);
}

.ctrl-icon {
  width: 44rpx;
  height: 44rpx;
}

/* 向后兼容 */
.control-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  font-size: 32rpx;
  color: #333;
  backdrop-filter: blur(10rpx);
}

.control-btn:active {
  background-color: rgba(255, 255, 255, 0.7);
}

.control-icon {
  width: 40rpx;
  height: 40rpx;
}

.zoom-in, .zoom-out {
  font-weight: bold;
  font-size: 36rpx;
}

/* 信息面板 */
.map-info-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.marker-info {
  padding: 30rpx;
}

.marker-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.marker-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
}

.marker-type {
  font-size: 24rpx;
  color: #999;
  background-color: #f0f0f0;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

.marker-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.marker-actions {
  display: flex;
  gap: 20rpx;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border-radius: 25rpx;
  border: none;
  background-color: #f8f8f8;
  color: #333;
}

.btn-small.primary {
  background-color: #1AAD19;
  color: #fff;
}

.btn-small:active {
  opacity: 0.8;
}

/* 图例面板 */
.legend-panel {
  position: absolute;
  top: 100rpx;
  left: 20rpx;
  right: 20rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 9;
  backdrop-filter: blur(10rpx);
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.legend-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 2rpx solid #eee;
}

.legend-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.legend-close {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
}

.legend-close:active {
  background-color: #e0e0e0;
}

.legend-items {
  padding: 20rpx 30rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.legend-item:last-child {
  margin-bottom: 0;
}

.legend-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

/* 浮动按钮 - 使用统一层级系统 */
.floating-buttons {
  position: absolute;
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  right: 20rpx;
  z-index: var(--z-dropdown);
  display: flex;
  flex-direction: column;
  gap: var(--control-gap);
}

.float-btn {
  width: 88rpx;
  height: 88rpx;
  background-color: rgba(38, 87, 253, 0.95); /* 使用我们的标志性蓝色 #2657FD */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(38, 87, 253, 0.25);
  backdrop-filter: blur(12rpx);
  transition: all 0.2s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.float-btn:active {
  background-color: rgba(38, 87, 253, 0.8);
  transform: scale(0.95);
}

.float-btn.legend-btn {
  background-color: rgba(255, 255, 255, 0.95);
  border: 2rpx solid rgba(38, 87, 253, 0.2);
}

.float-btn.legend-btn:active {
  background-color: rgba(240, 240, 240, 0.95);
}

.float-icon {
  width: 44rpx;
  height: 44rpx;
  filter: brightness(0) invert(1);
}

.float-btn.legend-btn .float-icon {
  filter: none;
  opacity: 0.8;
}

/* 加载状态 */
.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--color-white-alpha-95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: var(--z-modal);
  backdrop-filter: blur(8rpx);
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #2657FD;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 错误状态 */
.error-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(8rpx);
  padding: 40rpx;
}

.error-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: #ff4757;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.error-message {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.retry-button {
  padding: 20rpx 40rpx;
  background-color: #2657FD;
  color: white;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

.retry-button:active {
  background-color: #1e4bdb;
  transform: scale(0.98);
}

/* 加载和错误状态（向后兼容） */
.loading-overlay, .error-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 20;
}

.loading-content, .error-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-content text, .error-content text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.retry-btn {
  padding: 16rpx 32rpx;
  background-color: #1AAD19;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  font-size: 28rpx;
}

.retry-btn:active {
  background-color: #0e8b0e;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .header {
    padding: 15rpx 20rpx;
  }
  
  .title {
    font-size: 32rpx;
  }
  
  .action-btn {
    padding: 8rpx 16rpx;
    font-size: 22rpx;
  }
  
  .action-icon {
    width: 28rpx;
    height: 28rpx;
  }
  
  .map-controls {
    top: 15rpx;
    right: 15rpx;
  }
  
  .control-btn {
    width: 70rpx;
    height: 70rpx;
  }
}

/* 底部信息面板 - 统一设计 */
.info-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(255, 255, 255, 0.98), rgba(255, 255, 255, 0.95));
  border-radius: 24rpx 24rpx 0 0;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  transform: translateY(100%);
  transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  z-index: 1001;
  max-height: 60vh;
  overflow: hidden;
}

.info-panel.show {
  transform: translateY(0);
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx 16rpx 32rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.06);
}

.panel-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #000;
  flex: 1;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  transition: all 0.2s ease;
}

.close-btn:active {
  background-color: rgba(0, 0, 0, 0.12);
  transform: scale(0.95);
}

.panel-content {
  padding: 24rpx 32rpx;
  max-height: 40vh;
  overflow-y: auto;
}

.panel-image {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.panel-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.panel-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background-color: rgba(38, 87, 253, 0.1);
  color: #2657FD;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.panel-actions {
  padding: 20rpx 32rpx 32rpx 32rpx;
  display: flex;
  gap: 16rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.06);
}

.action-btn {
  flex: 1;
  padding: 20rpx 24rpx;
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.2s ease;
  border: none;
}

.action-btn.primary {
  background-color: #2657FD;
  color: white;
}

.action-btn.primary:active {
  background-color: #1e4bdb;
  transform: scale(0.98);
}

.action-btn:not(.primary) {
  background-color: rgba(0, 0, 0, 0.06);
  color: #333;
}

.action-btn:not(.primary):active {
  background-color: rgba(0, 0, 0, 0.12);
  transform: scale(0.98);
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1a1a1a;
  }
  
  .header {
    background-color: #2a2a2a;
    border-bottom-color: #444;
  }
  
  .title {
    color: #fff;
  }
  
  .action-btn {
    background-color: #3a3a3a;
    color: #ccc;
  }
  
  .map-info-panel {
    background-color: #2a2a2a;
  }
  
  .marker-name {
    color: #fff;
  }
  
  .marker-desc {
    color: #ccc;
  }
  
  .info-panel {
    background: linear-gradient(to top, rgba(42, 42, 42, 0.98), rgba(42, 42, 42, 0.95));
  }
  
  .panel-title {
    color: #fff;
  }
  
  .panel-description {
    color: #ccc;
  }
} 