/* pages/scan-verify/scan-verify.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 状态指示区 */
.status-section {
  text-align: center;
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.status-icon {
  margin-bottom: 30rpx;
}

.status-image {
  width: 120rpx;
  height: 120rpx;
}

.status-image.rotating {
  animation: rotate 1.5s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.status-message {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.welcome-info {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #e0e0e0;
}

.welcome-text {
  font-size: 32rpx;
  color: #1AAD19;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.entry-time {
  font-size: 28rpx;
  color: #666;
}

/* 票务信息卡片 */
.ticket-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(90deg, #1AAD19 0%, #67C23A 100%);
  color: #fff;
}

.ticket-type {
  font-size: 32rpx;
  font-weight: bold;
}

.ticket-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.status-valid {
  background-color: rgba(26, 173, 25, 0.2) !important;
}

.status-used {
  background-color: rgba(153, 153, 153, 0.2) !important;
}

.status-expired {
  background-color: rgba(245, 108, 108, 0.2) !important;
}

.card-content {
  padding: 30rpx;
}

.ticket-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.ticket-info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

/* 入园信息 */
.entry-info {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx dashed #e0e0e0;
}

.entry-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1AAD19;
  margin-bottom: 20rpx;
  text-align: center;
}

.entry-details {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.entry-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.entry-label {
  font-size: 26rpx;
  color: #666;
}

.entry-value {
  font-size: 26rpx;
  color: #1AAD19;
  font-weight: bold;
}

/* 扫码结果信息 */
.scan-info {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.scan-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.scan-result {
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
  background-color: #f5f5f5;
  padding: 15rpx;
  border-radius: 8rpx;
  font-family: monospace;
}

/* 操作按钮区 */
.action-section {
  margin-bottom: 40rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 25rpx 40rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

.action-btn.primary {
  background: linear-gradient(90deg, #1AAD19 0%, #67C23A 100%);
  color: #fff;
}

.action-btn.secondary {
  background-color: #fff;
  color: #1AAD19;
  border: 2rpx solid #1AAD19;
}

.action-btn.warning {
  background: linear-gradient(90deg, #E6A23C 0%, #F56C6C 100%);
  color: #fff;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

/* 加载提示 */
.loading-tips {
  text-align: center;
  padding: 40rpx 20rpx;
}

.tip-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 10rpx;
}

/* 温馨提示 */
.tips-section {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部安全间距 */
.bottom-safe-area {
  height: calc(env(safe-area-inset-bottom) + 20rpx);
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .container {
    padding: 30rpx 20rpx;
  }
  
  .status-section {
    padding: 40rpx 30rpx;
  }
  
  .status-image {
    width: 100rpx;
    height: 100rpx;
  }
  
  .status-message {
    font-size: 32rpx;
  }
  
  .ticket-name {
    font-size: 32rpx;
  }
  
  .action-btn {
    padding: 20rpx 30rpx;
    font-size: 28rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: #ffffff;
  }
  
  .ticket-card {
    background-color: #ffffff;
    color: #333;
  }
  
  .info-label,
  .info-value {
    color: #333;
  }
  
  .scan-info {
    background-color: #f8f8f8;
    color: #333;
  }
  
  .scan-result {
    background-color: #ffffff;
    color: #333;
  }
  
  .tips-section {
    background-color: #f8f8f8;
    color: #333;
  }
  
  .tip-item {
    color: #666;
  }
} 