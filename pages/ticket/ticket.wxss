/* packages/ticket/pages/ticket/ticket.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
}

/* 选项卡样式 */
.tabs {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #1AAD19;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: #1AAD19;
  border-radius: 3rpx;
}

/* 部分标题 */
.section-title {
  font-size: 30rpx;
  font-weight: bold;
  margin: 30rpx 0 20rpx;
  color: #333;
}

/* 门票列表 */
.ticket-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ticket-item {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  border: 2rpx solid #eee;
}

.ticket-item.selected {
  border-color: #1AAD19;
  background-color: #f0fff0;
}

.ticket-info {
  flex: 1;
}

.ticket-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.ticket-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.ticket-notice {
  font-size: 24rpx;
  color: #999;
}

.ticket-price {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: center;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #e64340;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin: 6rpx 0;
}

.discount {
  font-size: 22rpx;
  color: #fff;
  background-color: #e64340;
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}

/* 数量选择器 */
.quantity-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.quantity-btn {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #1AAD19;
  color: #fff;
  font-size: 36rpx;
  border-radius: 8rpx;
}

.quantity-btn.disabled {
  background-color: #ccc;
}

.quantity {
  width: 100rpx;
  text-align: center;
  font-size: 32rpx;
  margin: 0 30rpx;
}

/* 日期选择器 */
.date-picker {
  background-color: #fff;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 联系人表单 */
.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
}

.form-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

/* 总价和提交 */
.total-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0;
}

.total-price {
  font-size: 28rpx;
  color: #333;
}

.total-price text {
  font-size: 36rpx;
  font-weight: bold;
  color: #e64340;
}

.submit-btn {
  background-color: #1AAD19;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

/* 购票须知 */
.notice-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.notice-section .section-title {
  margin-top: 0;
}

.notice-content {
  color: #666;
  font-size: 26rpx;
  line-height: 1.8;
}

.notice-item {
  margin-bottom: 10rpx;
}

/* 订单列表 */
.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-bottom: 1rpx solid #eee;
}

.order-id {
  font-size: 24rpx;
  color: #666;
}

.order-status {
  font-size: 24rpx;
  color: #1AAD19;
  font-weight: bold;
}

.order-status.UNPAID {
  color: #ff9800;
}

.order-status.PAID {
  color: #1AAD19;
}

.order-status.USED {
  color: #999;
}

.order-status.REFUNDED, .order-status.REFUNDING {
  color: #e64340;
}

.order-status.CANCELLED {
  color: #999;
}

.order-content {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.order-info {
  flex: 1;
}

.order-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.order-date {
  font-size: 24rpx;
  color: #999;
}

.order-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #e64340;
}

.order-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.order-btn {
  padding: 12rpx 30rpx;
  background-color: #1AAD19;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.order-btn.refund {
  background-color: #fff;
  color: #e64340;
  border: 1rpx solid #e64340;
}
