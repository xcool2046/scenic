/* pages/user/user.wxss */
.page {
  padding: 0 0 30rpx 0;
  background-color: #f5f5f5;
}

/* 用户信息卡片 */
.user-card {
  background-color: #1AAD19;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
}

.login-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  border-radius: 30rpx;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
  display: inline-block;
}

.login-btn::after {
  border: none;
}

/* 订单栏 */
.orders-section {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.view-all image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 6rpx;
}

.order-types {
  display: flex;
  justify-content: space-around;
}

.order-type {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.order-type image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.order-type text {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  border-radius: 20rpx;
  padding: 2rpx 10rpx;
  min-width: 30rpx;
  text-align: center;
}

/* 功能列表 */
.feature-list {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.feature-item text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
}

/* 帮助栏 */
.help-section {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.help-items {
  display: flex;
  flex-wrap: wrap;
}

.help-item {
  width: 50%;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}

.help-item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.help-item text {
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
} 