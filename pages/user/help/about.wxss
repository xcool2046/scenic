/* pages/user/help/about.wxss */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #ffffff;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.logo {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  padding: 20rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  font-size: 28rpx;
  color: #666;
}

.content {
  flex: 1;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.05);
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1AAD19;
  margin-bottom: 20rpx;
  display: block;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 16rpx;
}

.attribution-item {
  margin-bottom: 16rpx;
}

.attribution-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.attribution-content {
  font-size: 28rpx;
  color: #333;
}

.team-item {
  display: flex;
  margin-bottom: 16rpx;
}

.team-role {
  font-size: 28rpx;
  color: #666;
  width: 150rpx;
}

.team-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.footer {
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
}

.copyright {
  font-size: 24rpx;
  color: #999;
} 